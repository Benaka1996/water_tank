<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:theme="@style/Theme.WaterTank">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/water_tank_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:gravity="center"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sensor_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Senso Value"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@id/water_tank_index"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fill_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Water Senso Value"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@id/water_tank_index"
        app:layout_constraintTop_toBottomOf="@id/sensor_value" />

</androidx.constraintlayout.widget.ConstraintLayout>